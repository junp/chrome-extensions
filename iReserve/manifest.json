{
	"name":	"iphone++++++香港预约提醒",
	"version": "1.0",
	"manifest_version": 2,
	"description": "监控开卖时间",
	"browser_action": {
		"default_icon": "images/start-icon.png",
		"default_popup": "popup.html"
	},
	
	"content_scripts": [{
		"matches": ["https://reserve.cdn-apple.com/HK/zh_HK/reserve/iPhone/availability.json"],
		"js": ["js/contentscript.js"],
		"run_at": "document_end"
	}],

	"permissions": [
		"tabs", "*://*/*",
		"tts",
		"ttsEngine",
		"notifications"
	],

	"background": {
		"scripts": ["js/background.js"]
	}
}
